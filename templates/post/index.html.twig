{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="col-md-4 m-4">
        <form action="{{ path('post_import') }}" method="post" enctype="multipart/form-data">
            <div class="input-group mb-3">
                <div class="custom-file">
                    <label for="posts">Choose a CSV posts file</label>
                    <input id="posts" class="form-control-file" type="file" name="posts" accept=".csv" required>
                </div>
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">Upload</button>
                </div>
            </div>
        </form>
    </div>

    <a class="btn btn-primary ml-4" href="{{ path('post_export') }}">Export posts to CSV file</a>
    <a class="btn btn-primary ml-4" href="{{ path('post_new') }}">Create new</a>

    <form class="mt-4 mb-2 col-md-4" action="{{ path('post_index') }}" method="get">
        <input class="form-control" type="text" name="q" placeholder="Search posts" value="{{ q }}">
    </form>

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <span class="h5 card-title">Post</span>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Body</th>
                        <th>Author</th>
                        <th>Categories</th>
                        <th style="min-width: 200px">actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.id }}</td>
                            <td>{{ post.title }}</td>
                            <td>{{ post.body }}</td>
                            <td class="text-nowrap">{{ post.user.name }}</td>
                            <td>
                                {% for category in post.categories %}
                                    <span class="badge badge-primary">{{ category.name }}</span>
                                {% endfor %}
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="{{ path('post_show', {'id': post.id}) }}">
                                    <i class="fas fa-view"></i>View
                                </a>
                                {% if is_granted('edit', post) %}
                                    <a class="btn btn-info btn-sm" href="{{ path('post_edit', {'id': post.id}) }}">
                                        <i class="fas fa-pencil-alt"></i>Edit
                                    </a>
                                {% endif %}
                                {% if is_granted('delete', post) %}
                                    <form style="display: inline-block" method="post" action="{{ path('post_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
